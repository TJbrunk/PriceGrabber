{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/src/PriceGrabber.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "options": {
                "cwd": "${workspaceFolder}/src"
            },
            "args": [
                "publish",
                "${workspaceFolder}/src/PriceGrabber.csproj",
                "--configuration",
                "Release",
                "--runtime",
                "win10-x64",
                "--verbosity",
                "normal"
            ],
            "problemMatcher": "$msCompile"
        }
    ]
}